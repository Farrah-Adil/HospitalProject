               @* @*<td>
                    @Html.DisplayFor(modelItem => item.PharmacyId)
                </td>*@

                

                <td>
                    @Html.ActionLink("Update", "AddPharmacist", new {item.pharmacistId, item .Name,item.Age, item.Gender,item.PhoneNo,item.PharmacyName, } , new { @class="btn btn-outline-success rounded-pill"}) |
                    @Html.ActionLink("Delete", "DeletePharmacist", new {  item.pharmacistId  }, new { @class = "btn btn-outline-danger rounded-pill",onclick="return confirm('Do you really want this record?')" })
