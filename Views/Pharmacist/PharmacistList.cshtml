    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>PharmacistList</h1>




<hr />

<p class="float-left">
    <a asp-action="AddPharmacist" asp-controller="Pharmacist" class="btn btn-outline-secondary">Add Pharmacist</a>
</p>

<p class="float-right">
    @* <a asp-action="AddCustomer" asp-controller="Item" class="btn btn-outline-secondary">Add School</a> |*@
