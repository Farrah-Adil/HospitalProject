@model HospitalProject.Models.PatientEntity
@{
    ViewData["Title"] = "AddPatient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddPatient</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SavePatient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="PtId" />
               
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            

            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HosId" class="control-label"></label>
                <select asp-for="HosId" class="form-control" asp-items="@(new SelectList(ViewBag.HospitalList,"HospitalId","Name"))">
                </select>

            </div>



            <div class="form-group">
                <label asp-for="DepId" class="control-label"></label>
                <select asp-for="DepId" class="form-control" asp-items="@(new SelectList(ViewBag.DepList,"DepId","DepName"))">
                </select>

            </div>







