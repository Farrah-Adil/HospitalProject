@model HospitalProject.Models.DrEntity
@{
    ViewData["Title"] = "AddDoctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddDoctor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveDoctor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="hidden" asp-for="DrId" />

                <label asp-for="DrName" class="control-label"></label>
                <input asp-for="DrName" class="form-control" />
                <span asp-validation-for="DrName" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="DrSpecialty" class="control-label"></label>
                <input asp-for="DrSpecialty" class="form-control" />
                <span asp-validation-for="DrSpecialty" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="DrLicencesNo" class="control-label"></label>
                <input asp-for="DrLicencesNo" class="form-control" />
                <span asp-validation-for="DrLicencesNo" class="text-danger"></span>
            </div>


           

            <div class="form-group">
                <label asp-for="HosId" class="control-label"></label>
                <select asp-for="HosId" class="form-control" asp-items="@(new SelectList(ViewBag.HospitalList,"HospitalId","Name"))">
                </select>

            </div>



            <div class="form-group">
                <label asp-for="DepId" class="control-label"></label>
                <select asp-for="DepId" class="form-control" asp-items="@(new SelectList(ViewBag.DepList,"DepId","DepName"))">
                </select>

            </div>


            <div>
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Dr" class="btn btn-outline-success">Dr List</a>
            </div>
        </form>

    </div>
</div> 